{
    "name": "jjpeleato/wp-starter-boilerplate",
    "description": "WordPress base repository for any project.",
    "keywords": [
		"WordPress",
		"WordPress Coding Standard",
		"psr1",
		"psr12",
		"lando",
		"deployer"
	],
    "homepage": "https://github.com/jjpeleato/wp-starter-boilerplate.git",
    "license": "GPL-2.0",
    "authors": [
        {
            "name": "Jos√© J. Peleato Pradel",
            "homepage": "https://www.jjpeleato.com/"
		}
    ],
    "require": {
        "php": "^7.4",
		"ext-json": "*"
    },
    "require-dev": {
        "dealerdirect/phpcodesniffer-composer-installer": "^0.7.1",
        "deployer/deployer": "v7.0.0-rc.4",
        "phpcompatibility/phpcompatibility-wp": "^2.1",
        "roave/security-advisories": "dev-latest",
        "squizlabs/php_codesniffer": "^3.6",
		"vlucas/phpdotenv": "^5.4",
        "wp-coding-standards/wpcs": "^2.3"
    },
    "config": {
        "process-timeout" : 0,
		"optimize-autoloader": true,
        "sort-packages": true
    },
    "scripts": {
		"cs": "phpcs",
		"cs:fix": "phpcbf"
	},
	"extra": {
		"scripts-description": {
			"cs": "Run phpcodesniffer",
			"cs:fix": "Run phpcodesniffer beautifier"
		}
	}
}
