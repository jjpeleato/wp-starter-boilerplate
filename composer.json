{
    "name": "jjpeleato/wp-starter-boilerplate",
    "description": "WordPress base repository for any project.",
    "keywords": ["lando", "WordPress", "deployer", "psr1", "psr2"],
    "homepage": "https://github.com/jjpeleato/wp-starter-boilerplate.git",
    "license": "GPL-2.0",
    "authors": [
        {
            "name": "Jos√© J. Peleato Pradel",
            "homepage": "https://www.jjpeleato.com/"
		}
    ],
    "require": {
        "php": "^7.3.0",
        "vlucas/phpdotenv": "^3.3"
    },
    "require-dev": {
        "dealerdirect/phpcodesniffer-composer-installer": "^0.7.0",
        "deployer/deployer": "^6.8",
        "phpcompatibility/phpcompatibility-wp": "^2.1.0",
        "roave/security-advisories": "dev-master",
        "squizlabs/php_codesniffer": "^3.5.8",
        "wp-coding-standards/wpcs": "^2.3.0"
    },
    "config": {
        "process-timeout" : 0,
		"optimize-autoloader": true,
        "sort-packages": true
    },
    "scripts": {
		"cs": "phpcs",
		"cs:fix": "phpcbf",
		"test": [
			"phpunit"
		]
	},
	"extra": {
		"scripts-description": {
			"test": "Run unit tests"
		}
	}
}
