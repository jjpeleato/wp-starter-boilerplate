{
    "name": "wp-starter-theme",
    "description": "WordPress base repository for any project.",
    "keywords": ["lando", "WordPress", "deployer", "psr1", "psr2"],
    "homepage": "https://github.com/jjpeleato/wp-starter-boilerplate.git",
    "license": "GPL-2.0",
    "authors": [
        {
            "name": "Jos√© J. Peleato Pradel",
            "homepage": "https://www.jjpeleato.com/"
		}
    ],
    "require": {
        "php": "^7.2.0"
    },
    "require-dev": {
		"phpunit/phpunit": "^8",
        "deployer/deployer": "^6.4"
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "config": {
        "process-timeout" : 0,
        "sort-packages": true
    },
    "scripts": {
        "test": "phpunit",
        "dep/local": [
            "dep deploy localhost --branch=develop"
        ],
        "dep/pre": [
            "dep deploy pre --branch=develop"
        ],
		"dep/pro": [
			"dep deploy pro --branch=master"
		]
    }
}
